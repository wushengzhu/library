{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2018",
    "declaration": true,
    "inlineSources": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "types": ["./typings"],
    "lib": ["dom", "es2018"]
  },
  "files": ["public-api.ts", "typings.d.ts"],
  "exclude": ["src/test.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "enableIvy": "false"
  }
}
